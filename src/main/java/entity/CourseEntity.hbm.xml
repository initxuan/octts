<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.CourseEntity" table="course" schema="OCTTS">
        <property name="id">
            <column name="id" sql-type="int(11) unsigned"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(500)" length="500" not-null="true"/>
        </property>
        <property name="credit">
            <column name="credit" sql-type="int(11) unsigned" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>